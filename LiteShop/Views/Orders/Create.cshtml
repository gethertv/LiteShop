@model LiteShop.Entities.Order

@{
    ViewData["Title"] = "Create";
}
<style>

    .product-item {
        display: grid;    
        grid-template-columns: 1fr auto;
        margin: 5px;
    }

    .remove-product {
        background: #ff1717;
        font-weight: 600;
        padding: 10px 5px;
        border-radius: 4px;
        border: none;
        color: #f8f8f8;
        margin-left: 20px;
    }

</style>
<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
@*             <div class="form-group">
                <label asp-for="DataS" class="control-label"></label>
                <input asp-for="DataS" class="form-control" />
                <span asp-validation-for="DataS" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label for="products" class="control-label">Produkty</label>
                <div id="product-list">
                    <div class="product-item">
                        <select id="ProductId" name="ProductId" class="form-control">
                            @foreach (var product in ViewBag.ProductId)
                            {
                                <option value="@product.Value">@product.Text</option>
                            }
                        </select>
                    </div>
                </div>
                <button type="button" id="add-product" class="btn btn-secondary">Dodaj produkt</button>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('#add-product').click(function () {
                let input = $('#product-list .product-item:first').clone()

                // dodanie przycisku
                input.append('<button class="remove-product">Usuń</button>');

                input.appendTo('#product-list');
            });

            $('#product-list').on('click', '.remove-product', function () {
                $(this).closest('.product-item').remove();
            });
        });
    </script>
}